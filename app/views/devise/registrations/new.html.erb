

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-signin">
  	<h2 class="form-signin-heading">Sign up</h2>
    <%= f.input :email, required: true, autofocus: true, type:"email", class: 'col-sm-2 control-label', placeholder: "Enter your Email" %>
    <%= f.input :password, required: true,class: 'col-sm-2 control-label',type:"password",placeholder:"Enter your password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true,class: 'col-sm-2 control-label', type:"password", placeholder:"Enter your password" %>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class:"btn btn-lg btn-primary btn-block" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
