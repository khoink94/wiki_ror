

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-signin">
  	<h2 class="form-signin-heading">Log in</h2>
    <%= f.input :email, required: false, autofocus: true, type:"email", class: 'col-sm-2 control-label', placeholder: "Enter your Email" %>
    <%= f.input :password, required: false , type:"password", class: 'col-sm-2 control-label',placeholder:"Enter your password"%>
    <%= f.input :remember_me,class:"checkbox", as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn btn-lg btn-primary btn-block" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
