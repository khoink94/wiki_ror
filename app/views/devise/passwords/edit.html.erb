

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-signin">
    <h2 class="form-signin-heading">Change your password</h2>
    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , type:"email", class: 'col-sm-2 control-label', placeholder: "Enter your Email" %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, type:"email", class: 'col-sm-2 control-label', placeholder: "Enter your Email" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" , class:"btn btn-lg btn-primary btn-block"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
