
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-signin">
  <h2 class="form-signin-heading">Forgot your password?</h2>
    <%= f.input :email, required: true, autofocus: true , type:"email", class: 'col-sm-2 control-label', placeholder: "Enter your Email"%>
 
  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions",class:"btn btn-lg btn-primary btn-block" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
